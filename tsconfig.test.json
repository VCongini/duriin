{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "node",
        "noEmit": false,
        "outDir": "dist-tests",
        "baseUrl": "./",
        "paths": {
            "*.svg?raw": ["tests/__mocks__/svgRaw"]
